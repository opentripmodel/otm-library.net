{
    "$schema": "https://json.schemastore.org/semantic-release.json",
    "extends": [
        "semantic-release-monorepo"
    ],
    "branches": [
        "chore/ci-fail-on-publish-error"
    ],
    "tagFormat": "Profile@${version}",
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "releaseRules": [
                    {
                        "type": "chore",
                        "release": "patch"
                    }
                ]
            }
        ],
        "@semantic-release/release-notes-generator",
        [
            "@semantic-release/exec",
            {
                "verifyConditionsCmd": "echo $CSPROJ ${JSON.stringify(branch.tags)}",
                "verifyReleaseCmd": "echo \"ðŸ“¦  version: ${branch.tags[branch.tags.length - 1].version}\"",
                "analyzeCommitsCmd": "echo $CSPROJ ${JSON.stringify(commits)}",
                "publishCmd": "../../.github/workflows/scripts/release.sh $CSPROJ ${nextRelease.gitTag}"
            }
        ]
    ]
}
